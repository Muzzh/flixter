<br />
<div class="sign-box col-10 offset-1">
  <h1>Add a new course</h1>
  <br />
  <%= simple_form_for @course, url: instructor_courses_path do |f| %>
    <%= f.input :title, required: true, autofocus: true %>
    <%= f.input :description, required: true %>
    <%= f.input :cost, required: true %>
    <%= f.input :image %>
    <br />
    <%= f.submit "Create", class: 'btn btn-warning' %>
    <br />
  <% end %>
  <br />
</div>
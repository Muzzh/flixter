<br />
<div class="sign-box col-10 offset-1">
  <h1 class="text-center"><%= @course.title %></h1>
  <br />
  <%= link_to 'Preview as Student...', course_path(@course), class: 'btn btn-secondary float-right' %>
  <br class="clr" />
  <div class="text-center">
    <%= link_to 'Add a new section...', new_instructor_course_section_path(@course), class: 'btn btn-warning btn-lg' %>
  </div>
  <br />
  <ul>
    <% @course.sections.each do |section| %>
      <li>
        <%= section.title %>
      </li>
    <% end %>
  </ul>
</div>